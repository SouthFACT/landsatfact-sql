CREATE OR REPLACE VIEW public.vw_product_list_gap_for_vrt AS
SELECT DISTINCT ON (products.product_date) products.product_date::text AS vrt_name,
    string_agg((SELECT path_data from lsf_enviroments) ||'/gap_mask/'::text || products.product_id::text, ' '::text) AS product_list,
    products.product_type,
    products.product_date::date AS vrt_date
   FROM products
     LEFT JOIN extracted_imagery ON products.input2::text = extracted_imagery.quad_scene::text
  WHERE
    products.analysis_source::text = 'LCV'::text AND
    products.product_type::text = 'GAP'::text AND
    products.is_on_disk = 'YES'
  GROUP BY products.product_date, products.product_type
UNION
 SELECT 'cr_'::text || vw_custom_requests_for_vrt_gap.aoi::text AS vrt_name,
    vw_custom_requests_for_vrt_gap.product_list,
    vw_custom_requests_for_vrt_gap.product_type,
    'now'::text::date AS vrt_date
   FROM vw_custom_requests_for_vrt_gap
  ORDER BY 1 DESC;

ALTER TABLE public.vw_product_list_gap_for_vrt
  OWNER TO root;
GRANT ALL ON TABLE public.vw_product_list_gap_for_vrt TO root;
GRANT SELECT ON TABLE public.vw_product_list_gap_for_vrt TO readonly;
GRANT ALL ON TABLE public.vw_product_list_gap_for_vrt TO dataonly;
